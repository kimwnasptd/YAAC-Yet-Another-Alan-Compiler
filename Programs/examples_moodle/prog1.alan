--this program reads an integer x
-- if x >0 then print 'Hello word' 
-- else print 'is negative'

program () : proc


	hello () : proc
	 	{ 	
	 	 writeString("Hello world!\n");
	 	}

	n:int;
	i:int;
	{
		n = readInteger();
		if((n<0)){
			writeString("The number ");
			writeInteger(n);
			writeString(" is negative\n");
		}
		else{
			i =0;
			while(i<n){
				hello();
				i=i+1;
			}
		}
	}



	
	